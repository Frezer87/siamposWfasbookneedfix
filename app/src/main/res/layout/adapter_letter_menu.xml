<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingEnd="12dp"
    android:paddingStart="12dp"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_letter_menu_image_url"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_letter_menu_category"
        android:visibility="gone" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            app:siShape="@drawable/shape_rounded_rectangle"
            android:id="@+id/iv_letter_menu_image"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_appetizers"
            app:siSquare="true"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:clickable="false"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:paddingStart="6dp">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_letter_menu_name"
                android:inputType="textCapWords"
                android:textColor="@color/album_title"
                android:textSize="18sp"
                android:gravity="center"
                android:clickable="false"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:paddingTop="6dp">

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_letter_menu_options"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:clickable="false"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_letter_menu_price"
                    android:layout_weight="1"
                    android:paddingStart="3dp"
                    android:gravity="center_horizontal"
                    android:paddingEnd="6dp"
                    android:clickable="false"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/icon_spicy"
            android:id="@+id/iv_letter_menu_spicy"
            android:layout_gravity="center"
            android:clickable="false"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:id="@+id/tv_letter_menu_description"
            android:layout_marginStart="10dp"
            android:layout_height="36dp"
            android:gravity="center_horizontal"
            android:clickable="false"/>
    </LinearLayout>
</LinearLayout>